
<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>General Elements</h3>
        </div>
        <div class="title_right">
            <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search for...">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">Go!</button>
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2><i class="fa fa-bars"></i> Search Result <small>Manage your list</small></h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>
                                    <a href="#">Settings 1</a>
                                </li>
                                <li>
                                    <a href="#">Settings 2</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>

                <div class="x_content">
                    <!--Order List-->
                    <table class="table table-striped projects">
                        <thead>
                            <tr>
                                <th style="width: 1%">#</th>
                                <th>Order No</th>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>OrderDate</th>
                                <th style="width: 20%">#Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in @Model.orderCollection)
                            {
                                if (item.Status == 0)
                                {
                                    <tr>
                                        <td>#</td>
                                        <td>
                                            @item.OrderNo
                                        </td>
                                        <td><a>@item.Product</a></td>
                                        <td>@item.Qty</td>
                                        <td>@item.OrderDate</td>
                                        <td>
                                            <a asp-controller="supplier" asp-action="AcceptOrder" asp-route-id="@item.Id" class="btn btn-primary btn-xs"><i class="fa fa-folder"></i> Accept </a>
                                            <a asp-controller="supplier" asp-action="AbortOrder" asp-route-id="@item.Id" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> Abort </a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>
<!--Resources Reference-->
<script src="~/js/supplier/bootstrap.min.js"></script>
<!-- chart js -->
<script src="~/js/supplier/chartjs/chart.min.js"></script>
<!-- bootstrap progress js -->
<script src="~/js/supplier/progressbar/bootstrap-progressbar.min.js"></script>
<script src="~/js/supplier/nicescroll/jquery.nicescroll.min.js"></script>
<!-- icheck -->
<script src="~/js/supplier/icheck/icheck.min.js"></script>
<script src="~/js/supplier/custom.js"></script>
